<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Books</h1>
            <a href="/books/create" class="btn btn-primary">Add New Book</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Genre</th>
                                <th>Published</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(typeof books !== 'undefined' && books.length > 0) { %>
                                <% books.forEach(book => { %>
                                    <tr>
                                        <td><%= book.title %></td>
                                        <td><%= book.author %></td>
                                        <td><%= book.genre %></td>
                                        <td><%= book.published_year %></td>
                                        <td>
                                            <form action="/books/<%= book.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete <%= book.title %>?');">
                                                <div class="btn-group btn-group-md">
                                                    <a href="/books/<%= book.id %>" class="btn btn-info">View</a>
                                                    <a href="/books/<%= book.id %>/edit" class="btn btn-warning">Edit</a>
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">No books found. <a href="/books/create">Add a book</a> to get started.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>