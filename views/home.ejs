<div class="container-fluid px-0">
    <!-- Hero section -->
    <div class="position-relative">
        <div class="py-5 text-white text-center hero-section">
            <div class="container py-5">
                <h1 class="display-3 fw-bold mb-4">Welcome to iReview</h1>
                <p class="lead fs-4 mb-5 about-module">This web application was created to fulfill Web Technology module’s requirements and <br>does not represent an actual company or service</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/books" class="btn btn-light btn-lg px-4">Browse Books</a>
                    <a href="/reviews/create" class="btn btn-outline-light btn-lg px-4">Write a Review</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features section -->
    <div class="container py-5">
        <div class="row g-4 py-3">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <div class="mb-3 text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                            </svg>
                        </div>
                        <h3>Discover Books</h3>
                        <p class="text-muted">Browse through our collection of books across various genres and find your next great read.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <div class="mb-3 text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                            </svg>
                        </div>
                        <h3>Rate & Review</h3>
                        <p class="text-muted">Share your thoughts on books you've read and help others find their perfect match.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <div class="mb-3 text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                                <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z"/>
                            </svg>
                        </div>
                        <h3>Join the Community</h3>
                        <p class="text-muted">Connect with fellow book lovers and discover recommendations from like-minded readers.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured books section -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">Featured Books</h2>
            <div class="row g-4">
                <% if(typeof featuredBooks !== 'undefined' && featuredBooks.length > 0) { %>
                    <% featuredBooks.forEach(book => { %>
                        <div class="col-md-3">
                            <div class="card h-100 shadow-sm">
                                <div class="bg-secondary text-white text-center py-5">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                                        <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                                    </svg>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title"><%= book.title %></h5>
                                    <p class="card-text text-muted">By <%= book.author %></p>
                                    <p class="card-text"><small class="text-muted"><%= book.genre %></small></p>
                                </div>
                                <div class="card-footer bg-white border-top-0">
                                    <a href="/books/<%= book.id %>" class="btn btn-outline-primary w-100">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Latest reviews section -->
    <div class="container py-5">
        <h2 class="text-center mb-5">Latest Reviews</h2>
        <div class="row">
            <% if(typeof latestReviews !== 'undefined' && latestReviews.length > 0) { %>
                <% latestReviews.forEach(review => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-3">
                                    <% if(typeof books !== 'undefined') { %>
                                        <% const book = books.find(b => b.id === review.book_id) %>
                                        <h5 class="card-title">
                                            <a href="/books/<%= review.book_id %>" class="text-decoration-none text-dark">
                                                <%= book ? book.title : 'Unknown Book' %>
                                            </a>
                                        </h5>
                                    <% } else { %>
                                        <h5 class="card-title">Book #<%= review.book_id %></h5>
                                    <% } %>
                                    <div>
                                        <% for(let i = 0; i < Math.floor(review.rating); i++) { %>
                                            <span class="text-warning">★</span>
                                        <% } %>
                                        <% if(review.rating % 1 !== 0) { %>
                                            <span class="text-warning">☆</span>
                                        <% } %>
                                        <% for(let i = 0; i < (5 - Math.ceil(review.rating)); i++) { %>
                                            <span class="text-secondary">☆</span>
                                        <% } %>
                                    </div>
                                </div>
                                <p class="card-text"><%= review.review_text.length > 150 ? review.review_text.substring(0, 150) + '...' : review.review_text %></p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">By: <%= review.reviewer_name %></small>
                                    <a href="/reviews/<%= review.id %>" class="btn btn-sm btn-outline-primary">Read Full Review</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="lead">No reviews yet. Be the first to share your thoughts!</p>
                    <a href="/reviews/create" class="btn btn-primary mt-3">Write a Review</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Call to action section -->
    <div class="bg-primary text-white text-center py-5">
        <div class="container py-3">
            <h2 class="mb-4">Join our community of book lovers today!</h2>
            <p class="lead mb-4">Start sharing your thoughts on your favorite books and discover new reads.</p>
            <a href="/books/create" class="btn btn-light btn-lg me-2">Add a Book</a>
            <a href="/reviews/create" class="btn btn-outline-light btn-lg">Write a Review</a>
        </div>
    </div>
</div>

<style>
    .about-module {
        background-color: rgba(131, 131, 131, 0.4);
        padding: 20px;
        border-radius: 10px;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
    }
</style>